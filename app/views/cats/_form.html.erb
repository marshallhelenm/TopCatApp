<div id="garden-3">

<% if @cat.img_url %>
<div id="catpic">
<img src=<%=@cat.img_url%> id="catpic" alt='A picture of the user's cat'>
</div>
<% end %>


<div id="new_form">
<%= form_for @cat do |c| %>

<h3></h3>
    <%= c.label :img_url %><br>
    <%= c.text_field :img_url %><br>
<%# somehow do a drop down for cat image options %>
    <%= c.label :name %><br>
    <%= c.text_field :name %><br>
    
    <%= c.label :breed %><br>
    <%= c.text_field :breed %><br>
    
    <%= c.label :description %><br>
    <%= c.text_area :description %><br>

    <%= c.submit %>
<% end %>
</div>
</div>