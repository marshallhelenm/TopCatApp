<div id="garden-3">

<img src=<%=session[:catpics].values.sample%> id="catpic" alt='A picture of a happy cat'>
<h3 id="flashError"><%= flash[:error_message]%></h3>
<h1 id="title">Top Cat</h1>

<div id="new_form">

<%= form_for :login do |f|%>
    <%= f.label :username %><br>
    <%= f.text_field :username %><br><br>

    <%= f.label :password %><br>
    <%= f.password_field :password %><br>
    <br><br>
    
    <%= f.submit 'Log In', class: "genericButton" %>
    
<% end %>
<br>

<%= button_to "Sign Up", new_user_path, :method => 'get', class: "genericButton" %>
</div>

</div>
