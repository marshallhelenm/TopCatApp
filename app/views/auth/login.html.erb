<div id="garden">

<h3><%= flash[:error_message]%></h3>
<img src=<%=@pic%> id="catpic" alt='A picture of a happy cat'>
<h1 id="title">Top Cat</h1>

<div id="new_form">

<%= form_for :login do |f|%>
    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :password %>
    <%= f.password_field :password %>
    <br><br>
    
    <%= f.submit 'Log In'%>
    
<% end %>
<br>
<%= button_to "Sign Up", new_user_path, :method => 'get' %>
</div>

</div>
